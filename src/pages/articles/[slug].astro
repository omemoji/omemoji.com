---
import "katex/dist/katex.min.css";
import type { CollectionEntry } from "astro:content";
import { getCollection, render } from "astro:content";
import ArticleToc from "@/components/ArticleToc.astro";
import Back from "@/components/Back.astro";
import ImageHandler from "@/components/ImageHandler.astro";
import LinkHandler from "@/components/LinkHandler.astro";
import TopArticle from "@/components/TopArticle.astro";
import Layout from "@/layouts/Layout.astro";

interface Props {
  article: CollectionEntry<"articles">;
}

export async function getStaticPaths() {
  const articles: CollectionEntry<"articles">[] = await getCollection("articles", ({ data }) => {
    return import.meta.env.PROD ? data.published : true;
  });
  return articles.map((article) => ({
    params: { slug: article.id },
    props: { article },
  }));
}

const { article } = Astro.props;
const { Content, headings } = await render(article);
export const components = {
  img: ImageHandler,
  a: LinkHandler,
};
---

<Layout
  title={article.data.title + " | 創作物紹介"}
  description={article.data.description}
  category="Articles"
  path={"/articles/" + article.id}
  og={{
    enabled: true,
    image: new URL(`/api/og/articles/${article.id}.png`, Astro.url.origin),
    width: 1200,
    height: 630,
    type: "article",
  }}
>
  <TopArticle
    emoji={article.data.emoji}
    title={article.data.title}
    tags={article.data.tags}
    date={article.data.date}
  />
  {headings.length > 0 && <ArticleToc headings={headings} />}
  <article>
    <Content components={components} />
  </article>
  <Back
    url="/articles"
    slug={article.id}
    title={article.data.title + " | 創作物紹介"}
    tags={article.data.tags}
  />
</Layout>
